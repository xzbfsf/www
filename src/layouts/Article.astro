---
/**
 * article layout
 * 
 * this layout is used for displaying an article. it includes a title block 
 * with the article's title, author, and publication date, and a slot for the 
 * article content.
 */
import Main from "../layouts/Main.astro";
import TitleBlock from "../components/TitleBlock.astro";
const { frontmatter } = Astro.props;
---

<!-- TODO: style code blocks -->
<Main>
  <div class="w-full md:w-3/5 max-w-3xl flex flex-col p-4 space-y-4">
    <TitleBlock
      title={frontmatter.title}
      dateStr={frontmatter.date}
      author={frontmatter.author}
    />
    <slot />
  </div>
</Main>
